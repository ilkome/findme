				.popup-med.remodal(data-remodal-id="addok-popup")
					.close
						a(href="#").remodal-cancel
					.bdesc Пациент успешно добавлен <br>в систему
					.action
						a(href="#").remodal-ok Вернуться на домашнюю страницу
				//- - - - - - - - - - - - - - - - - - - - - - - - -
				.popup-med.remodal(data-remodal-id="photo-popup")
